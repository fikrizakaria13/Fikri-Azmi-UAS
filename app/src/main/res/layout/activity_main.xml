<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lat.sttg.informatika.uts_cafe.MainActivity">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ck1"
        android:hint="Original (Rp. 5000)"
        />


    <EditText
        android:id="@+id/jml1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:inputType="number"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ck2"
        android:layout_below="@+id/ck1"
        android:layout_marginTop="15dp"
        android:hint="Mocha Latte (Rp. 7000)"
        />


    <EditText
        android:id="@+id/jml2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:layout_below="@+id/jml1"
        android:layout_alignParentEnd="true"
        android:inputType="number"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ck3"
        android:layout_below="@+id/ck2"
        android:layout_marginTop="15dp"
        android:hint="Capuccino Latte (Rp. 7000)"
        />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ck4"
        android:layout_below="@+id/ck3"
        android:layout_marginTop="15dp"
        android:hint="Vanila Latte (Rp. 8000)"
        />

    <EditText
        android:id="@+id/jml3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:layout_above="@+id/ck4"
        android:layout_alignParentEnd="true"
        android:inputType="number"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ck5"
        android:layout_below="@+id/ck4"
        android:layout_marginTop="15dp"
        android:hint="Java Latte (Rp. 8000)"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/tombol"
        android:layout_below="@+id/ck4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp" />


    <EditText
        android:id="@+id/jml4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:layout_below="@+id/jml3"
        android:layout_alignParentEnd="true"
        android:inputType="number"/>

    <EditText
        android:id="@+id/jml5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:layout_below="@+id/jml4"
        android:layout_alignParentEnd="true"
        android:inputType="number"/>


</RelativeLayout>
